@model IEnumerable<zadanie4.Models.Singer>
@{
    ViewData["Title"] = "Список Певцов";
}
<!DOCTYPE html>

<html>
<head>
    <title>Певцы</title>
</head>
<body>
    <h3>певцы</h3>
    <form method="get" action="/Singer/Singer/">
        <input type="text" value="" name="text" />
        <input type="submit" value="Поиск" />
    </form>
    <table>
        <tr>
            <td>имя</td>
            <td></td>
        </tr>
        @foreach (var singer in Model)
        {
            <tr>
                <td>@singer.Firstname</td>

                <td><a href="~/Singer/Detail/@singer.Id">Детали</a></td>
                <td><a href="~/Singer/Edit/@singer.Id">Редактировать</a></td>
                <td><a href="~/Singer/Delete/@singer.Id">Удалить</a></td>
            </tr>

        }
        <tr>
            <td><a href="~/Singer/Add/">добавить</a></td>
        </tr>
    </table>
</body>
</html>